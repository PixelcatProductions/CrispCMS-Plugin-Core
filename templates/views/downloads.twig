{% set currentPage = 'downloads' %}
{% set pageTitle = plugin.getTranslation('title') %}
{% set error = false %}



{% extends "base.twig" %}

{% block content %}
    {{ include("components/navbar.twig") }}

    <div class="jumbotron jumbotron-fluid">
        <div class="container text-center">
            <h1 class="display-4">{{ 'downloads'|translate }}</h1>
            <p class="mt-2">{{ 'downloads_jumbotron_paragraph_1'|translate|raw }}</p>
            {% if featured is not null %}
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h4 class="card-title">
                            {{ plugin.getTranslation("featured_title") }}
                            <p>
                                <img class="img-responsive" style="max-width: 128px;" src="{{ plugin-includeResource(featured.image) }}">
                            </p>
                        </h4>
                        <div class="card-text mb-2">
                            <div class="row">
                                {{ plugin.getTranslation(featured.description)|raw }}

                            </div>
                        </div>
                        <div class="btn-group d-flex mt-auto" role="group" aria-label="...">
                            <a target="_blank" href="{{ featured.repository }}" class="btn btn-warning btn-block mt-auto w-100 h-100"><i class="fab fa-github"></i> {{ plugin.getTranslation('view_source') }}</a>
                            <a target="_blank" href="{{ featured.url }}" class="btn btn-success btn-block mt-auto w-100 h-100"><i class="fas fa-download"></i> {{ plugin.getTranslation('add_to', 1, {"{{ browser }}": featured.browser}) }}</a>
                        </div>

                    </div>
                </div>
            {% endif %}
        </div>
    </div>
    <div class="container-fluid">
        <section id="team">
            {% if isMobile == true %}
                {% set colSize = 1 %}
            {% else %}
                {% set colSize = 2 %}
            {% endif %}
            {% include plugin.PluginName ~ "/templates/extensiongrid/grid.twig" with {'Extensions': extensions, 'columns': colSize} %}
        </section>
    </div>
{% endblock %}