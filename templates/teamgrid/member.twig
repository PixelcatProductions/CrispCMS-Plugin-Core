<div class="col-{{ col }}">
    <div class="card h-100">
        <img class="card-img-top" src="{{ plugin.includeResource(member.image) }}" alt="image">
        <div class="card-body d-flex flex-column">
            <h4 class="card-title">
                {{ member.name|raw }}
            </h4>
            {% if member.sub is not empty %}
                <h6 class="card-title text-muted">{{ member.sub|raw }}</h6>
            {% endif %}
            <p class="card-text">{{ member.description|raw }}</p>
            <div class="btn-group d-flex mt-auto" role="group" aria-label="...">
                {% if member.twitter is not empty %}
                    <a target="_blank" href="https://twitter.com/{{ member.twitter }}" class="btn btn-primary btn-block mt-auto w-100"><i class="fab fa-twitter"></i></a>
                    {% endif %}
                    {% if member.url is not empty %}
                    <a target="_blank" href="{{ member.url }}" class="btn btn-info btn-block mt-auto w-100"><i class="fas fa-globe-europe"></i></a>
                    {% endif %}
                    {% if member.github is not empty %}
                    <a target="_blank" href="https://github.com/{{ member.github }}" class="btn btn-dark btn-block mt-auto w-100"><i class="fab fa-github"></i></a>
                    {% endif %}
            </div>

        </div>
    </div>
</div>